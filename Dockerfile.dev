FROM python:3.13.9-slim

# Définir le dossier de travail
WORKDIR /app

# Installer les dépendances système minimales pour EdgeTTS
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    ca-certificates \
    ffmpeg \
    espeak-ng \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /tmp/* \
    && rm -rf /var/tmp/*

# Copier les dépendances Python et les installer
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# Vérifier que EdgeTTS fonctionne
RUN python -c "import edge_tts; print('EdgeTTS installé avec succès')"

# Créer les dossiers nécessaires
RUN mkdir -p /app/audio_responses /app/data

# Copier tout le code source après installation des dépendances
COPY . .

# Copier le fichier d'environnement de développement
COPY .env.dev .env

# Variables d'environnement pour le mode développement
ENV FLASK_APP=app.py
ENV FLASK_ENV=development
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV EDGE_VOICE=fr-FR-HenriNeural

# Exposer le port utilisé par l'appli
EXPOSE 5001

# Commande par défaut
CMD ["sh", "-c", "python init_db.py && python app.py"]